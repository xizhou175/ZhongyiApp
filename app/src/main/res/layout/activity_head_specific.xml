<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HeadSpecificActivity">

    <TextView
        android:id="@+id/titleHead"
        android:layout_width="159dp"
        android:layout_height="28dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/head_specific"
        android:textSize="20dp" />

    <Button
        android:id="@+id/head_s1"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/head_s2"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/head_s2"
        android:background="@drawable/my_button_released"
        android:onClick="onClickButton"
        android:text="头痛" />

    <Button
        android:id="@+id/head_s2"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_below="@id/titleHead"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/my_button_released"
        android:onClick="onClickButton"
        android:text="头扁" />

    <Button
        android:id="@+id/head_s3"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/head_s2"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/head_s2"
        android:background="@drawable/my_button_released"
        android:onClick="onClickButton"
        android:text="头胀" />

    <Button
        android:id="@+id/head_s5"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_below="@id/head_s2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/my_button_released"
        android:onClick="onClickButton"
        android:text="头晕" />

    <Button
        android:id="@+id/head_s4"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_below="@id/head_s1"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/head_s1"
        android:background="@drawable/my_button_released"
        android:onClick="onClickButton"
        android:text="头" />

    <Button
        android:id="@+id/head_s6"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_below="@id/head_s3"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/head_s3"
        android:background="@drawable/my_button_released"
        android:onClick="onClickButton"
        android:text="头硬" />

    <Button
        android:id="@+id/summary"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/my_button_released"
        android:layout_centerHorizontal="true"
        android:onClick="onClickSummary"
        android:text="@string/summary" />

</RelativeLayout>