<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BodyActivity">

    <ToggleButton
        android:id="@+id/toggle_button"
        android:layout_width="148dp"
        android:layout_height="49dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:onClick="onClickFlip"
        android:textOff="@string/back"
        android:textOn="@string/front"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/bodyView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#fafafa"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/toggle_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/male_front" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="159dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/search"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headText"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginEnd="120dp"
        android:layout_marginTop="26dp"
        android:onClick="onClick"
        android:text="@string/head"
        android:textColor="@android:color/holo_blue_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <TextView
        android:id="@+id/chestText"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginEnd="130dp"
        android:layout_marginTop="95dp"
        android:onClick="onClick"
        android:text="@string/chest"
        android:textColor="@android:color/holo_blue_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <TextView
        android:id="@+id/abdomenText"
        android:layout_width="38dp"
        android:layout_height="18dp"
        android:layout_marginEnd="155dp"
        android:layout_marginTop="155dp"
        android:onClick="onClick"
        android:text="@string/abdomen"
        android:textColor="@android:color/holo_blue_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <TextView
        android:id="@+id/reproductionText"
        android:layout_width="38dp"
        android:layout_height="18dp"
        android:layout_marginEnd="160dp"
        android:layout_marginTop="190dp"
        android:onClick="onClick"
        android:text="@string/reproduction"
        android:textColor="@android:color/holo_blue_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <TextView
        android:id="@+id/limbsText"
        android:layout_width="38dp"
        android:layout_height="18dp"
        android:layout_marginEnd="230dp"
        android:layout_marginTop="170dp"
        android:onClick="onClick"
        android:text="@string/limbs"
        android:textColor="@android:color/holo_blue_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <TextView
        android:id="@+id/groinText"
        android:layout_width="38dp"
        android:layout_height="18dp"
        android:layout_marginEnd="145dp"
        android:layout_marginTop="210dp"
        android:onClick="onClick"
        android:text="@string/groin"
        android:textColor="@android:color/holo_blue_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <TextView
        android:id="@+id/bodyText"
        android:layout_width="38dp"
        android:layout_height="18dp"
        android:layout_marginEnd="245dp"
        android:layout_marginTop="16dp"
        android:onClick="onClick"
        android:text="@string/body"
        android:textColor="@android:color/holo_blue_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <TextView
        android:id="@+id/backText"
        android:layout_width="38dp"
        android:layout_height="18dp"
        android:layout_marginEnd="130dp"
        android:layout_marginTop="95dp"
        android:onClick="onClick"
        android:text="@string/back"
        android:textColor="@android:color/holo_blue_light"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />


</android.support.constraint.ConstraintLayout>